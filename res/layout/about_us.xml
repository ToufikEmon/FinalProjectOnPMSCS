<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_style"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imgChyon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:alpha="1"
                    android:src="@drawable/about_us" />

                <TextView
                    android:id="@+id/textView4"
                    style="@style/ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/text_view_style"
                    android:text="Abu Sayed Md. Mostafizur Rahaman"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView7"
                    style="@style/ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/text_view_style"
                    android:text="Associate Professor\n
Dept. of Computer Science and Engineering\n
Jahangirnagar University"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtChyonMail"
                    style="@style/ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/text_view_style"
                    android:text="asmmr@juniv.edu"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtChyonNumber"
                    style="@style/ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/text_view_style"
                    android:text="+8801927129603"
                    android:textSize="14sp" />
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#FF4444"
                android:orientation="horizontal"
                android:weightSum="1" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/edit_text_style"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imgEmon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"
                        android:alpha="1"
                        android:src="@drawable/about_us" />

                    <TextView
                        android:id="@+id/textView1"
                        style="@style/ButtonText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/text_view_style"
                        android:text="Toufik Ahmed Emon"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textEmonMail"
                        style="@style/ButtonText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/text_view_style"
                        android:text="toufikahmedemon@gmail.com"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtEmonNumber"
                        style="@style/ButtonText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/text_view_style"
                        android:text="+8801760568639"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/edit_text_style"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imgAnup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/about_us" />

                    <TextView
                        android:id="@+id/txtName"
                        style="@style/ButtonText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/text_view_style"
                        android:text="Anup Majumder"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtAnupMail"
                        style="@style/ButtonText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/text_view_style"
                        android:text="anupju.cse20@gmail.com"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtAnupNumber"
                        style="@style/ButtonText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/text_view_style"
                        android:text="+8801725228874"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</ScrollView>