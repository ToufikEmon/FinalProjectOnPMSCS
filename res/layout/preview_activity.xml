<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="460dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <Button
            android:id="@+id/button"
            style="@style/ButtonText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="94dp"
            android:background="@drawable/text_view_style"
            android:gravity="center"
            android:text="@string/text_view_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvApplicantName"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:background="@drawable/text_view_vertical"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/applicant_name"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold|italic" >

            <requestFocus />
        </TextView>

        <TextView
            android:id="@+id/tvApplicantFathhersName"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tvApplicantName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/text_view_vertical"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/fathers_name"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold|italic" >
        </TextView>

        <TextView
            android:id="@+id/tvApplicantMothersName"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tvApplicantFathhersName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/text_view_vertical"
            android:gravity="center"
            android:hint="@string/mothers_name"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold|italic" >
        </TextView>

        <TextView
            android:id="@+id/tvNationality"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tvApplicantMothersName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/text_view_vertical"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/nationality"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold|italic" >
        </TextView>

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tvNationality"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/text_view_vertical"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold|italic" >
        </TextView>

        <TextView
            android:id="@+id/tvDateOfBirth"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tvEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/text_view_vertical"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/date_of_birth"
            android:inputType="date"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold|italic" >
        </TextView>

        <TextView
            android:id="@+id/tvContactNumber"
            style="@drawable/round_button"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvDateOfBirth"
            android:layout_marginTop="18dp"
            android:background="@drawable/text_view_vertical"
            android:gravity="center"
            android:hint="@string/contact_number"
            android:inputType="phone"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold|italic" >
        </TextView>

        <TextView
            android:id="@+id/tvPresentAddress"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvContactNumber"
            android:layout_marginTop="18dp"
            android:background="@drawable/text_view_vertical"
            android:gravity="center"
            android:hint="@string/present_address"
            android:inputType="textPostalAddress"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold|italic" >
        </TextView>

        <TextView
            android:id="@+id/tvPermanentAddress"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvPresentAddress"
            android:layout_marginTop="18dp"
            android:background="@drawable/text_view_vertical"
            android:gravity="center"
            android:hint="@string/permanent_address"
            android:inputType="textPostalAddress"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold|italic" >
        </TextView>

        <TableLayout
            android:id="@+id/tableSexBlood"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvPermanentAddress" >

            <TableRow
                android:layout_width="150sp"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tvSex"
                    style="@style/ButtonText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_view_vertical"
                    android:text="SEX:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvBloodGroup"
                    style="@style/ButtonText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50sp"
                    android:background="@drawable/text_view_vertical"
                    android:text="Blood Group:"
                    android:textSize="18sp" />
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/textView2"
            style="@style/ButtonText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableSexBlood"
            android:layout_marginTop="18dp"
            android:background="@drawable/text_view_style"
            android:gravity="center"
            android:text="@string/academic_details"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <TableLayout
            android:id="@+id/tbvTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:background="@color/background_blue"
            android:orientation="horizontal"
            android:stretchColumns="*" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tvDegree"
                    android:layout_width="50sp"
                    android:layout_height="30sp"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="1sp"
                    android:layout_marginTop="1sp"
                    android:background="@drawable/text_view_vertical"
                    android:gravity="center"
                    android:text="@string/degree"
                    android:textColor="@color/Black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="50sp"
                    android:layout_height="30sp"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="1sp"
                    android:layout_marginTop="1sp"
                    android:background="@drawable/text_view_vertical"
                    android:gravity="center"
                    android:text="@string/group"
                    android:textColor="@color/Black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="50sp"
                    android:layout_height="30sp"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="1sp"
                    android:layout_marginTop="1sp"
                    android:background="@drawable/text_view_vertical"
                    android:gravity="center"
                    android:text="@string/board"
                    android:textColor="@color/Black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="50sp"
                    android:layout_height="30sp"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="1sp"
                    android:layout_marginTop="1sp"
                    android:background="@drawable/text_view_vertical"
                    android:gravity="center"
                    android:text="@string/gpa"
                    android:textColor="@color/Black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="50sp"
                    android:layout_height="30sp"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="1sp"
                    android:layout_marginTop="1sp"
                    android:background="@drawable/text_view_vertical"
                    android:gravity="center"
                    android:text="@string/year"
                    android:textColor="@color/Black"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tvSSC"
                    android:layout_width="50sp"
                    android:layout_height="30sp"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="1sp"
                    android:layout_marginTop="1sp"
                    android:background="@drawable/text_view_vertical"
                    android:gravity="center"
                    android:hint="SSC"
                    android:paddingLeft="2sp"
                    android:paddingRight="2sp"
                    android:textAlignment="center"
                    android:textColor="@color/Black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSSCGroup"
                    android:layout_width="50sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="1sp"
                    android:layout_marginTop="1sp"
                    android:layout_weight="1"
                    android:background="@drawable/text_view_vertical"
                    android:gravity="center"
                    android:hint="@string/group"
                    android:textColor="@color/Black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSSCBoard"
                    android:layout_width="50sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="1sp"
                    android:layout_marginTop="1sp"
                    android:layout_weight="1"
                    android:background="@drawable/text_view_vertical"
                    android:gravity="center"
                    android:hint="@string/board"
                    android:textColor="@color/Black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSSCCGPA"
                    android:layout_width="50sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="1sp"
                    android:layout_marginTop="1sp"
                    android:layout_weight="1"
                    android:background="@drawable/text_view_vertical"
                    android:gravity="center"
                    android:hint="@string/gpa"
                    android:inputType="number"
                    android:textColor="@color/Black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSSCYear"
                    android:layout_width="50sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="0sp"
                    android:layout_marginTop="1sp"
                    android:layout_weight="1"
                    android:background="@drawable/text_view_vertical"
                    android:gravity="center"
                    android:hint="@string/year"
                    android:inputType="number"
                    android:textColor="@color/Black"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tvHSC"
                    android:layout_width="50sp"
                    android:layout_height="30sp"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="1sp"
                    android:layout_marginTop="1sp"
                    android:background="@drawable/text_view_vertical"
                    android:gravity="center"
                    android:hint="HSC"
                    android:textColor="@color/Black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvHSCGroup"
                    android:layout_width="50sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="1sp"
                    android:layout_marginTop="1sp"
                    android:layout_weight="1"
                    android:background="@drawable/text_view_vertical"
                    android:gravity="center"
                    android:hint="@string/group"
                    android:textColor="@color/Black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvHSCBoard"
                    android:layout_width="50sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="1sp"
                    android:layout_marginTop="1sp"
                    android:layout_weight="1"
                    android:background="@drawable/text_view_vertical"
                    android:gravity="center"
                    android:hint="@string/board"
                    android:textColor="@color/Black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvHSCCGPA"
                    android:layout_width="50sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="1sp"
                    android:layout_marginTop="1sp"
                    android:layout_weight="1"
                    android:background="@drawable/text_view_vertical"
                    android:gravity="center"
                    android:hint="@string/gpa"
                    android:inputType="number"
                    android:textColor="@color/Black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvHSCYear"
                    android:layout_width="50sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="0sp"
                    android:layout_marginTop="1sp"
                    android:layout_weight="1"
                    android:background="@drawable/text_view_vertical"
                    android:gravity="center"
                    android:hint="@string/year"
                    android:inputType="number"
                    android:textColor="@color/Black"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tvHons"
                    android:layout_width="50sp"
                    android:layout_height="30sp"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="1sp"
                    android:layout_marginTop="1sp"
                    android:background="@drawable/text_view_vertical"
                    android:gravity="center"
                    android:hint="Hons"
                    android:textColor="@color/Black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvHonsGroup"
                    android:layout_width="50sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="1sp"
                    android:layout_marginTop="1sp"
                    android:layout_weight="1"
                    android:background="@drawable/text_view_vertical"
                    android:gravity="center"
                    android:hint="@string/group"
                    android:textColor="@color/Black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvHonsBoard"
                    android:layout_width="50sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="1sp"
                    android:layout_marginTop="1sp"
                    android:layout_weight="1"
                    android:background="@drawable/text_view_vertical"
                    android:gravity="center"
                    android:hint="@string/board"
                    android:textColor="@color/Black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvHONSCGPA"
                    android:layout_width="50sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="1sp"
                    android:layout_marginTop="1sp"
                    android:layout_weight="1"
                    android:background="@drawable/text_view_vertical"
                    android:gravity="center"
                    android:hint="@string/gpa"
                    android:inputType="number"
                    android:textColor="@color/Black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvHONSYear"
                    android:layout_width="50sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="0sp"
                    android:layout_marginTop="1sp"
                    android:layout_weight="1"
                    android:background="@drawable/text_view_vertical"
                    android:gravity="center"
                    android:hint="@string/year"
                    android:inputType="number"
                    android:textColor="@color/Black"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tvOthers"
                    android:layout_width="50sp"
                    android:layout_height="30sp"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="1sp"
                    android:layout_marginTop="1sp"
                    android:background="@drawable/text_view_vertical"
                    android:gravity="center"
                    android:hint="Others"
                    android:textColor="@color/Black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvOtherGroup"
                    android:layout_width="50sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="1sp"
                    android:layout_marginTop="1sp"
                    android:layout_weight="1"
                    android:background="@drawable/text_view_vertical"
                    android:gravity="center"
                    android:hint="@string/group"
                    android:textColor="@color/Black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvOtherBoard"
                    android:layout_width="50sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="1sp"
                    android:layout_marginTop="1sp"
                    android:layout_weight="1"
                    android:background="@drawable/text_view_vertical"
                    android:gravity="center"
                    android:hint="@string/board"
                    android:textColor="@color/Black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvOtherSCGPA"
                    android:layout_width="50sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="1sp"
                    android:layout_marginTop="1sp"
                    android:layout_weight="1"
                    android:background="@drawable/text_view_vertical"
                    android:gravity="center"
                    android:hint="@string/gpa"
                    android:inputType="number"
                    android:textColor="@color/Black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvOtherYear"
                    android:layout_width="50sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="0sp"
                    android:layout_marginTop="1sp"
                    android:layout_weight="1"
                    android:background="@drawable/text_view_vertical"
                    android:gravity="center"
                    android:hint="@string/year"
                    android:inputType="number"
                    android:textColor="@color/Black"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/tvPresentStatusAndOrganization"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tbvTable"
            android:layout_marginTop="18dp"
            android:background="@drawable/text_view_vertical"
            android:gravity="center"
            android:hint="@string/present_status"
            android:inputType="textPostalAddress"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold|italic" >
        </TextView>

        <TextView
            android:id="@+id/tvPresentExperience"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvPresentStatusAndOrganization"
            android:layout_marginTop="18dp"
            android:background="@drawable/text_view_vertical"
            android:gravity="center"
            android:hint="@string/present_experience"
            android:inputType="textPostalAddress"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold|italic" >
        </TextView>

        <Button
            android:id="@+id/btnOK"
            style="@drawable/round_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPresentExperience"
            android:layout_marginBottom="10sp"
            android:layout_marginEnd="50sp"
            android:layout_marginStart="50sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/custom_button_white"
            android:gravity="center"
            android:text="Ok"
            android:textStyle="bold|italic" />
    </RelativeLayout>

</ScrollView>