<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            
            <gradient
                android:startColor="#33B5E5"
                android:endColor="#57C1EF"
                android:angle="270" />
            <stroke
                android:width="10dp"
                android:color="@color/DeepPink" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#33B5E5"
                android:startColor="#33B5E5"
                android:angle="270" />
            <stroke
                android:width="10dp"
                android:color="@color/DeepSkyBlue" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#33B5E5"
                android:startColor="#33B5E5"
                android:angle="270" />
            <stroke
                android:width="10dp"
                android:color="@color/DeepSkyBlue" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
</selector>